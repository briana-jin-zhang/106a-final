<mujoco model="cloth_hand">
	<default>
		<default class="cloth_joint">
			<joint type="hinge" range="-55 55" axis="0 0 1" springdamper="0.002 2" frictionloss="3"/>
		</default>
	</default>
    <worldbody>
        <body name="cloth_base" pos="0 0 0">
            <site name="ft_frame" pos="0 0 0" size="0.01 0.01 0.01" rgba="1 0 0 1" type="sphere" group="1"/>
            <body name="eef" pos="0 0 0" quat="0.707105 0 0 -0.707105">
                <site name="grip_site" pos="0 0 0" size="0.01 0.01 0.01" rgba="1 0 0 0.5" type="sphere" group="1"/>
                <site name="ee_x" pos="0.1 0 0" size="0.005 .1"  quat="0.707105  0 0.707108 0 " rgba="1 0 0 0" type="cylinder" group="1"/>
                <site name="ee_y" pos="0 0.1 0" size="0.005 .1" quat="0.707105 0.707108 0 0" rgba="0 1 0 0" type="cylinder" group="1"/>
                <site name="ee_z" pos="0 0 0.1" size="0.005 .1" quat="1 0 0 0" rgba="0 0 1 0" type="cylinder" group="1"/>
                <site name="grip_site_cylinder" pos="0 0 0" size="0.005 10" rgba="0 1 0 0.3" type="cylinder" group="1"/>
            </body>
        	
        	<body name="object_anchor" quat="0.707 0.707 0 0">
        		<inertial pos="0 0 0" mass="6e-4" diaginertia="1e-09 1e-09 1e-9"/>
        		<geom name="anchor" size="0.01 0.3" pos="0 0.03 0" type="cylinder" rgba="1 1 1 1" group="0"/>
        		<site name="anchor_left" pos="0.017 0.03 0.0"/>
        		<site name="anchor_right" pos="-0.017 0.03 0.0"/>
        		
        		<body name="object0">
		    		<geom name="geom0" size="0.01 0.275" pos="0 0.1 0" type="cylinder" rgba="1 1 1 1" group="0"/>
		    		<site name="site0_left" pos="0.017 0.1 0.0"/>
		    		<site name="site0_right" pos="-0.017 0.1 0.0"/>
					<body name="object1">
						<geom name="geom1" size="0.01 0.275" pos="0 0.14 0" type="cylinder" rgba="1 1 1 1" group="0"/>
						<joint name="joint0" pos="0 0.10 0" class="cloth_joint"/>
						<site name="site1_left" pos="0.017 0.14 0.0"/>
						<site name="site1_right" pos="-0.017 0.14 0.0"/>
						<body name="object2">
							<geom name="geom2" size="0.01 0.275" pos="0 0.18 0" type="cylinder" rgba="1 1 1 1" group="0"/>
							<joint name="joint1" pos="0 0.14 0" class="cloth_joint"/>
							<site name="site2_left" pos="0.017 0.18 0.0"/>
							<site name="site2_right" pos="-0.017 0.18 0.0"/>
							<body name="object3">
								<geom name="geom3" size="0.01 0.275" pos="0 0.22 0" type="cylinder" rgba="1 1 1 1" group="0"/>
								<joint name="joint2" pos="0 0.18 0" class="cloth_joint"/>
								<site name="site3_left" pos="0.017 0.22 0.0"/>
								<site name="site3_right" pos="-0.017 0.22 0.0"/>
								<body name="object4">
									<geom name="geom4" size="0.01 0.275" pos="0 0.26 0" type="cylinder" rgba="1 1 1 1" group="0"/>
									<joint name="joint3" pos="0 0.22 0" class="cloth_joint"/>
									<site name="site4_left" pos="0.017 0.26 0.0"/>
									<site name="site4_right" pos="-0.017 0.26 0.0"/>
									<body name="object5">
										<geom name="geom5" size="0.01 0.275" pos="0 0.30 0" type="cylinder" rgba="1 1 1 1" group="0"/>
										<joint name="joint4" pos="0 0.26 0" class="cloth_joint"/>
										<site name="site5_left" pos="0.017 0.30 0.0"/>
										<site name="site5_right" pos="-0.017 0.30 0.0"/>
									</body>
								</body>
							</body>
						</body>
					</body>
				</body>
        	</body>
        </body>
    </worldbody>
    <sensor>
        <force name="force_ee" site="ft_frame"/>
        <torque name="torque_ee" site="ft_frame"/>
    </sensor>
    <tendon>
    	<spatial name="tendon1" stiffness="1" damping="1" frictionloss="3">
			<site site="anchor_left"/> 
			<geom geom="geom0" sidesite="gripper0_site0_left"/>
			<site site="site1_left"/>
			<geom geom="geom2" sidesite="gripper0_site2_left"/>
			<site site="site3_left"/>
			<geom geom="geom4" sidesite="gripper0_site4_left"/>
			<site site="site5_left"/>
		</spatial>
		<spatial name="tendon2" stiffness="1" damping="1" frictionloss="3">
			<site site="anchor_left"/>
			<geom geom="geom1" sidesite="gripper0_site1_left"/>
			<site site="site2_left"/>
			<geom geom="geom3" sidesite="gripper0_site3_left"/>
			<site site="site4_left"/>
		</spatial>
		<spatial name="tendon3" stiffness="1" damping="1" frictionloss="3">
			<site site="anchor_right"/> 
			<geom geom="geom0" sidesite="gripper0_site0_right"/>
			<site site="site1_right"/>
			<geom geom="geom2" sidesite="gripper0_site2_right"/>
			<site site="site3_right"/>
			<geom geom="geom4" sidesite="gripper0_site4_right"/>
			<site site="site5_right"/>
		</spatial>
		<spatial name="tendon4" stiffness="1" damping="1" frictionloss="3">
			<site site="anchor_right"/>
			<geom geom="geom1" sidesite="gripper0_site1_right"/>
			<site site="site2_right"/>
			<geom geom="geom3" sidesite="gripper0_site3_right"/>
			<site site="site4_right"/>
		</spatial>
	</tendon>
</mujoco>
